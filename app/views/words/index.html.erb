<body>
  <section class="main-header">
    <%= image_tag('achieve.png') %>
  </section>

    <section class="about">
    <h1>About TwitteClone</h1>
    <p>
      sample
    </p>
  </section>

<h1>つぶやき一覧</h1>
<p><%= notice %></p>

<div class="container">
<div class="row">
<div class="col-xs-12 col-md-12 word-panel">
<div class="table-responsive">
	<table class="table table-hover table-bordered">
	<thead>
	  <tr>
				<th>投稿者</th>
				<th>つぶやき</th>
				<th>操作</th>
		</tr>
	</thead>
	    	<tbody>
	    	<% @words.each do |word| %>
			  <tr>
			  <td><%= word.writer %></td>
				<td><%= word.content %></td>
				<td>
         <div class="btn-group">
         <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
          <li><%= link_to 'Show', word, class: 'btn btn-default' %></li>
          <li><%= link_to 'Edit', edit_word_path(word), class: 'btn btn-info' %></li>
          <li><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></li>
          </ul>
         </div>
         </td>
         </tr>
        <% end %>
         </tbody>
  </table>
</div>
</div>
</div>
</div>

</body>
