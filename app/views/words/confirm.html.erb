<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @word, url: words_path, local: true) do |form| %>
  <%= form.hidden_field :writer %>
  <%= form.hidden_field :content %>

  <p>投稿者:<%= @word.writer %></p>
  <p>本文:<%= @word.content %></p>
  <%= form.submit  "つぶやく" %>
<% end %>

<%= form_with(model: @word, url: new_word_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :writer %>
  <%= form.hidden_field :content %>
  <%= form.submit "もどる", name: 'back' %>
<% end %>


